@model MvcRecordStore.Models.Record

@{
    Layout = "../Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete";
}

<div class="row mt-4">
    <div class="col-md-8 mx-auto">
        <div class="card border rounded-0 border-2 shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5>Delete Record</h5>
            </div>
            <div class="card-body">
                <h3>Are you sure you want to delete this record?</h3>
                <div class="form-group">
                    <label>Name</label>
                    <p class="form-control-static">@Model.Name</p>
                </div>
                <div class="form-group">
                    <label>Release Date</label>
                    <p class="form-control-static">@Model.ReleaseDate.ToString("yyyy-MM-dd")</p>
                </div>
                <div class="form-group">
                    <label>Artist</label>
                    <p class="form-control-static">@Model.Artist.Name</p>
                </div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-controller="Admin" asp-action="Records" class="btn btn-secondary">Back to Records</a>
                </form>
            </div>
        </div>
    </div>
</div>